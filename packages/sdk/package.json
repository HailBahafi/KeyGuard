{
  "name": "@keyguard/sdk",
  "version": "0.1.2",
  "description": "Secure TypeScript SDK for Device Binding to protect LLM API keys",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "prebuild": "rimraf dist",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "security",
    "device-binding",
    "cryptography",
    "ecdsa",
    "typescript",
    "keyguard"
  ],
  "author": "KeyGuard Team",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "happy-dom": "^15.0.0",
    "rimraf": "^6.1.2",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^2.0.0"
  },
  "dependencies": {
    "@fingerprintjs/fingerprintjs": "^4.2.1",
    "idb-keyval": "^6.2.1"
  }
}
