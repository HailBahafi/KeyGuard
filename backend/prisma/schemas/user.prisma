model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isActive  Boolean  @default(true)
  lastLogin DateTime?

  email    String   @unique
  name     String
  password String
  avatar   String?
  role     UserRole @default(USER)

  // Relations
  auditLogs AuditLog[]

  @@map("users")
}

enum UserRole {
  ADMIN
  USER
}
