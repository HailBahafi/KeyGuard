enum ApiKeyStatus {
  ACTIVE
  INACTIVE
  REVOKED
}

model ApiKey {
  id        String       @id @default(uuid())
  keyPrefix String       @unique
  name      String
  status    ApiKeyStatus @default(ACTIVE)
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  devices   Device[]

  @@map("api_keys")
}
