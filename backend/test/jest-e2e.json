{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/$1",
    "^src/(.*)$": "<rootDir>/src/$1"
  },
  "setupFiles": ["<rootDir>/test/setup-env.ts"],
  "testTimeout": 30000,
  "verbose": true
}
